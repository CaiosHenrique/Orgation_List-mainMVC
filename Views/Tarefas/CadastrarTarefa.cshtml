@model Orgation_List-mainMVC.Models.TarefaViewModel
@{
    ViewBag.Title = "Nova Tarefa";
}
<h2>Criar uma Nova Tarefa</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2"> Descrição Tarefa:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.DescTarefa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">StatusTarefa:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.StatusTarefa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Data de Criacao:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.DataCriacao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Nome :</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.NomeTarefa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <br>
        <div class="form-group">
             <div class="col-md-offset-2 col-md-6" >
                <input type="submit" value="Salvar" class="btn btn-primary"/>
             </div>
        </div>
}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>