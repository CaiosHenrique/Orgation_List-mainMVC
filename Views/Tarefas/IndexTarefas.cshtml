<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<Orgation_List-mainMVC.Models.DietaViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->
@{
    ViewBag.Title = "Tarefas";
}<!--Título da página para o navegador-->
<h2>Relação de Tarefas</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<!--Título da página-->
<p>
  <!--Links apontando para views na mesma pasta-->
    @Html.ActionLink("Criar Nova Tarefa", "Cadastrar")
</p>
<table class="table">
  <tr>
    <!--Títulos das colunas da tabela-->
    <th>@Html.DisplayNameFor(model => model.IdTarefa)</th>
    <th>@Html.DisplayNameFor(model => model.DescTarefa)</th>
    <th>@Html.DisplayNameFor(model => model.StatusTarefa)</th>
    <th>@Html.DisplayNameFor(model => model.DataCriacao)</th>
    <th>@Html.DisplayNameFor(model => model.NomeTarefa)</th>
    <th></th>
  </tr>
  <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
      <tr>
        <td>@Html.DisplayFor(modelItem => item.IdTarefa)</td>
        <td>@Html.DisplayFor(modelItem => item.Dia)</td>
        <td>@Html.DisplayFor(modelItem => item.StatusTarefa)</td>
        <td>@Html.DisplayFor(modelItem => item.DataCriacao)</td>
        <td>@Html.DisplayFor(modelItem => item.NomeTarefa)</td>
        <td>
          <!--Coluna para Links/botões-->
      @Html.ActionLink("Editar", "Editar", new { id = item.IdTarefa } ) |
      @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdTarefa } ) |
       </td>
      </tr>
    }